<!DOCTYPE html>
<html>
  <head>
    <title>BLOG</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <div class "page-header">
      <% if flash[:notice].present? %>
        <div class="alert alert-success">
        <%= flash[:notice] %>
         </div>   
         <% end %>
      <h1> BLOG </h1>
      </div>
      <%= yield %>  
      <% if user_signed_in? %>
       <p> <% link_to "Wyloguj sie", destory_user_session_path, method: :delete %>
       <% end %>
       </div>    
  </body>
</html>
